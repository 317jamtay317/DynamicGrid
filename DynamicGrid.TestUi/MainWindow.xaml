<Window x:Class="DynamicGrid.TestUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicGrid.TestUi"
        xmlns:control="clr-namespace:DynamicGrid.Control;assembly=DynamicGrid.Control"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance {x:Type local:MainWindow}}">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <DockPanel>
        <StackPanel Orientation="Vertical">
            <Button Content="Add Row" Command="{Binding AddRowCommand}"></Button>
            <Button Content="Add Column" Command="{Binding AddColumnCommand}"></Button>
            <Button Content="Remove Row" Command="{Binding RemoveRowCommand}"></Button>
            <Button Content="Remove Column" Command="{Binding RemoveColumnCommand}"></Button>
        </StackPanel>
        <control:DynamicGridControl />
    </DockPanel>
</Window>
